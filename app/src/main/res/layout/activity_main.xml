<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.drawerlayout.widget.DrawerLayout
        android:id="@+id/drawer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:openDrawer="start">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <View
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@+id/map"
                android:background="?android:attr/listDivider" />

            <View
                android:id="@+id/divider3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/map"
                android:background="?android:attr/listDivider" />

            <View
                android:id="@+id/divider4"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_toLeftOf="@id/map"
                android:background="?android:attr/listDivider" />

            <!--
            <ImageView
                android:id="@+id/main_register_location"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_above="@id/divider2"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                android:layout_toLeftOf="@id/divider3"
                android:background="@drawable/btn_plus" />
                -->

            <!--
            <AutoCompleteTextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="장소 찾기"
                android:id="@+id/main_autocomplete"
                android:background="@drawable/white_border"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
                -->

            <RelativeLayout
                android:id="@+id/main_place_search"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/white_border"
                android:elevation="10dp">

                <ImageView
                    android:id="@+id/ic_menu"
                    android:layout_width="25dp"
                    android:layout_height="35dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:paddingRight="10dp"
                    android:src="@drawable/ic_menu" />

                <EditText
                    android:id="@+id/et_main_place_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="7dp"
                    android:layout_toRightOf="@id/ic_menu"
                    android:background="@null"
                    android:focusable="false"
                    android:hint="장소 찾기"
                    android:textSize="17sp" />
            </RelativeLayout>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/fab2"
                android:layout_alignParentRight="true"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="6dp"
                android:backgroundTint="@color/colorPrimary"
                android:src="@drawable/ic_bus"
                android:visibility="invisible"
                app:elevation="6dp"
                app:fabCustomSize="75dp"
                app:pressedTranslationZ="12dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/fab1"
                android:layout_alignParentRight="true"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="6dp"
                android:backgroundTint="@color/colorPrimary"
                android:src="@drawable/ic_route"
                android:visibility="invisible"
                app:elevation="6dp"
                app:fabCustomSize="75dp"
                app:pressedTranslationZ="12dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/fab"
                android:layout_alignParentRight="true"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="@color/colorPrimary"
                android:src="@drawable/ic_city"
                android:visibility="invisible"
                app:elevation="6dp"
                app:fabCustomSize="75dp"
                app:pressedTranslationZ="12dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom|right"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/colorPrimary"
                android:src="@drawable/ic_plus"
                app:fabCustomSize="75dp" />

            <RelativeLayout
                android:id="@+id/main_marker_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="10dp"
                android:background="@color/colorWhite"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorWhite"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorGray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/vp_main_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="부어치킨 중앙대후문점"
                            android:textColor="@color/colorBlack"
                            android:textSize="20sp" />

                        <ImageView
                            android:layout_marginTop="5dp"
                            android:id="@+id/btn_image"
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:layout_marginLeft="12dp"
                            android:src="@drawable/ic_image" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/vp_main_address"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="3dp"
                        android:ellipsize="start"
                        android:singleLine="true"
                        android:text="서울특별시 동작구 흑석로84"
                        android:textColor="@color/colorBlack"
                        android:textSize="17sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="접근로 경사: "
                            android:textColor="@color/colorBlack"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/vp_main_slope"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="정보 없음"
                            android:textColor="@color/colorBlack"
                            android:textSize="17sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="출입문: "
                            android:textColor="@color/colorBlack"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/vp_main_auto_door"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="자동문"
                            android:textColor="@color/colorBlack"
                            android:textSize="17sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="승강기: "
                            android:textColor="@color/colorBlack"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/vp_main_elevator"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="있음"
                            android:textColor="@color/colorBlack"
                            android:textSize="17sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="장애인 화장실: "
                            android:textColor="@color/colorBlack"
                            android:textSize="17sp" />

                        <TextView
                            android:id="@+id/vp_main_toilet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="없음"
                            android:textColor="@color/colorBlack"
                            android:textSize="17sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="14dp"
                        android:background="@color/colorGray" />
                </LinearLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="190dp"
                    android:layout_alignParentLeft="true"
                    android:background="@color/colorGray" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="190dp"
                    android:layout_alignParentRight="true"
                    android:background="@color/colorGray" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/drawer_header"
            android:layout_width="350dp"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:background="@color/colorPrimary">

                <TextView
                    android:id="@+id/drawer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/drawer_email"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="20dp"
                    android:text="김성윤 님"
                    android:textColor="@color/colorWhite"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/drawer_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:text="admin@admin.com"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/drawer_setting"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:text="설정"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/drawer_mypage"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:text="마이페이지"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/drawer_record"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:text="내 활동 기록"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/drawer_logout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:background="@color/colorWhite"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="30dp"
                    android:text="로그아웃"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:background="@color/colorWhite"
                android:orientation="horizontal" />
        </LinearLayout>
    </androidx.drawerlayout.widget.DrawerLayout>
</layout>
