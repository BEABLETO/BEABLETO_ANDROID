<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_walk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="7dp"
        android:paddingBottom="7dp">

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="35dp"
            android:paddingTop="15dp"
            android:paddingRight="25dp"
            android:paddingBottom="15dp">

            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginLeft="4dp"
                android:src="@drawable/gray_circle" />

            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="9dp"
                android:src="@drawable/gray_circle" />

            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginTop="9dp"
                android:paddingRight="4dp"
                android:src="@drawable/ic_walk" />

            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="9dp"
                android:src="@drawable/gray_circle" />

            <ImageView
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="9dp"
                android:src="@drawable/gray_circle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="25dp"
                android:background="@color/colorGray" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="75dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:text="도보 약 12분"
                    android:textColor="@color/colorBlack"
                    android:textSize="17sp" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginRight="25dp"
                android:background="@color/colorGray" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_bus_subway"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="7dp"
        android:paddingBottom="7dp">

        <LinearLayout
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="39dp"
            android:paddingTop="15dp"
            android:paddingRight="25dp"
            android:paddingBottom="15dp">

            <View
                android:id="@+id/view_detail_transfer_id"
                android:layout_width="13dp"
                android:layout_height="150dp"
                android:background="@drawable/route_line"
                android:backgroundTint="@color/colorBlue" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/view1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="40dp"
                android:layout_marginRight="25dp"
                android:background="@color/colorGray" />

            <TextView
                android:id="@+id/tv_detail_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/view2"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:text="몽촌토성역.한성백제역 승차"
                android:textColor="@color/colorBlack"
                android:textSize="18sp" />

            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/view1"
                android:layout_marginTop="100dp"
                android:layout_marginRight="25dp"
                android:background="@color/colorGray" />

            <TextView
                android:id="@+id/tv_detail_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/view2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="중앙대학교 후문 하차"
                android:textColor="@color/colorBlack"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btn_transfer_id"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_below="@id/view1"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/round"
                android:backgroundTint="@color/colorBlue"
                android:text="신분당선  >"
                android:textColor="@color/colorWhite"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_detail_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_transfer_id"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="지하철 약 12분"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_detail_elevator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/btn_transfer_id"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/btn_transfer_id"
                android:text="9번출구 앞 승강기"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>